<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <%- include('./partials/layout.ejs') %>
        <link rel="stylesheet" type="text/css" href="/styles/profile.css">
        <script src="/js/handle-edit-profile.js" defer></script>
</head>

<body>
    <%- include('./partials/header.ejs') %>

        <main class="main">
            <div class="profile-container">
                <div class="profile-card">
                    <h2>My Profile</h2>
                    <div class="profile-info">
                        <label>Full Name:</label>
                        <input class="input" type="text" value="<%=fullName %>" id="fullName" name="fullName" disabled>

                        <label>Email:</label>
                        <input class="input" type="email" value="<%=email %>" id="email" name="email" disabled>

                        <label>Password:</label>
                        <input class="input" type="password" value="********" disabled>

                        <label>Account Created:</label>
                        <input class="input" type="text" value="<%=created %>" id="created" name="created" disabled>

                        <button class="edit-btn">Edit Profile</button>
                        <button class="save-btn inactive">Save</button>
                    </div>
                </div>
            </div>
        </main>

        <%- include('./partials/footer.ejs') %>
</body>

</html>
